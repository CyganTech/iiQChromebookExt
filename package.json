{
  "name": "iiq-chromebook-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Build and tooling workspace for the iiQ Chromebook Chrome extension.",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "npm-run-all lint:scripts lint:styles",
    "lint:scripts": "eslint \"extension/src/**/*.{js,ts,tsx}\"",
    "lint:styles": "stylelint \"extension/src/**/*.{css,scss}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,md,html,css,ts,tsx,js}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.263",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "~5.5.4",
    "vite": "^5.2.8",
    "vite-plugin-static-copy": "^0.17.0",
    "vitest": "^1.5.0"
  }
}
