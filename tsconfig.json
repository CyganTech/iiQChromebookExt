{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["chrome"]
  },
  "include": ["extension/src/**/*", "vite.config.ts", "vitest.config.ts"],
  "exclude": ["extension/dist", "node_modules"]
}
